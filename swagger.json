  "definitions": {
    "Book": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "The Great Gatsby"
        },
        "author": {
          "type": "string",
          "example": "F. Scott Fitzgerald"
        },
        "genre": {
          "type": "string",
          "example": "Fiction"
        },
        "publishedDate": {
          "type": "string",
          "example": "1925-04-10"
        },
        "summary": {
          "type": "string",
          "example": "A story of the mysteriously wealthy Jay Gatsby and his love for Daisy Buchanan."
        },
        "isbn": {
          "type": "string",
          "example": "9780743273565"
        },
        "averageRating": {
          "type": "number",
          "example": 4.3
        }
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "reviewerName": {
          "type": "string",
          "example": "Jane Doe"
        },
        "rating": {
          "type": "number",
          "example": 4.5
        },
        "comment": {
          "type": "string",
          "example": "A beautifully written book with deep emotional resonance."
        },
        "createdAt": {
          "type": "string",
          "example": "2025-03-22T00:00:00Z"
        }
      }
    }
